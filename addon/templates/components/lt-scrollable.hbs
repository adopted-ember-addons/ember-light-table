{{#if virtualScrollbar}}
  {{#ember-scrollable
    classNames='lt-scrollable'
    autoHide=autoHide
    as |scrollbar|
  }}
    {{yield}}
    {{lt-infinity onScrolledToBottom=onScrolledToBottom scrollBuffer=scrollBuffer}}
  {{/ember-scrollable}}
{{else}}
  {{yield}}
  {{lt-infinity onScrolledToBottom=onScrolledToBottom scrollBuffer=scrollBuffer}}
{{/if}}
