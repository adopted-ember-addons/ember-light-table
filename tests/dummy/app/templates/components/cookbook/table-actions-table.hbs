{{!-- BEGIN-SNIPPET table-actions-table --}}
<LightTable
  @table={{this.table}}
  @height="65vh"
  @tableActions={{hash
    deleteUser=(fn this.deleteUser)
    notifyUser=(fn this.notifyUser)
  }}
as |t|>

  {{!--
    In order for `fa-sort-asc` and `fa-sort-desc` icons to work,
    you need to have ember-font-awesome installed or manually include
    the font-awesome assets, e.g. via a CDN.
  --}}

  <t.head
    @onColumnClick={{fn this.onColumnClick}}
    @iconSortable="fa fa-sort"
    @iconAscending="fa fa-sort-asc"
    @iconDescending="fa fa-sort-desc"
    @fixed={{true}}
  />

  <t.body
    @canSelect={{false}}
    @onScrolledToBottom={{fn this.onScrolledToBottom}}
  as |body|>
    {{#if this.isLoading}}
      <body.loader>
        <TableLoader/>
      </body.loader>
    {{/if}}
  </t.body>

</LightTable>
{{!-- END-SNIPPET --}}
