{{!-- BEGIN-SNIPPET occluded-table --}}
<LightTable
  @table={{this.table}}
  @height="65vh"
  @occlusion={{true}}
  @estimatedRowHeight={{50}}
as |t|>

  {{!--
    In order for `fa-sort-asc` and `fa-sort-desc` icons to work,
    you need to have ember-font-awesome installed or manually include
    the font-awesome assets, e.g. via a CDN.
  --}}

  <t.head @fixed={{true}}/>

  <t.body
    @canSelect={{false}}
    @scrollBuffer={{200}}
    @onScrolledToBottom={{fn this.onScrolledToBottom}}
  as |body|>
    {{#if this.isLoading}}
      <body.loader>
        <TableLoader/>
      </body.loader>
    {{/if}}
  </t.body>

  <t.foot @fixed={{true}}/>
</LightTable>
{{!-- END-SNIPPET --}}
