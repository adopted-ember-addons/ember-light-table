{{!-- BEGIN-SNIPPET draggable-table --}}
<LightTable @table={{this.table}} @height="65vh" as |t|>
  <t.head
    @onColumnClick={{fn this.onColumnClick}}
    @iconSortable="fa fa-sort"
    @iconAscending="fa fa-sort-asc"
    @iconDescending="fa fa-sort-desc"
    @fixed={{true}}
  />

  <t.body
    @canSelect={{false}}
    @onScrolledToBottom={{fn this.onScrolledToBottom}}
  as |body|>
    {{#if this.isLoading}}
      <body.loader>
        <TableLoader/>
      </body.loader>
    {{/if}}
  </t.body>

  <t.foot @fixed={{true}} as |columns|>
    <tr>
      <td class="align-center" colspan={{columns.length}}>
        Drag and drop a column onto another to reorder the columns
      </td>
    </tr>
  </t.foot>
</LightTable>
{{!-- END-SNIPPET --}}
