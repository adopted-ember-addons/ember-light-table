{{!-- BEGIN-SNIPPET occluded-table --}}
<LightTable
  @table={{this.table}}
  @height="65vh"
  @occlusion={{true}}
  @estimatedRowHeight={{50}}
as |t|>

  {{!
    See the simple table example on using sorting icons
    and icon components.
  }}

  <t.head @fixed={{true}}/>

  <t.body
    @canSelect={{false}}
    @scrollBuffer={{200}}
    @onScrolledToBottom={{this.onScrolledToBottom}}
  as |body|>
    {{#if this.isLoading}}
      <body.loader>
        <TableLoader/>
      </body.loader>
    {{/if}}
  </t.body>

  <t.foot @fixed={{true}}/>
</LightTable>
{{!-- END-SNIPPET --}}
